{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "components.d.ts",
    "globals.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue",
    "src/@types/env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*", "test/**/*"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "typeRoots": ["src/@types", "node_modules/@types"]
  }
}
